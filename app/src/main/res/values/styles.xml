<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="JobJobTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Color Primary-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!--Color Secondary-->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryLightColor</item>
        <!--Status Bar-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="JobJobTheme.Control" parent="@style/JobJobTheme">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="Widget.JobJob.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/JobJobTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>
</resources>